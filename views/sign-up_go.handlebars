<h1>
    First things first, who are you?
</h1>
<div class="signup">
<div class='up'>
    <form action="/sign-up_go" method="post">
      <legend>I'm new.</legend>

      <div class="form-group">
        <label for="user-username">My name is...</label>
        <input type="text" name="username" class="form-control" id="user-username" placeholder="Bob Smith">
      </div>

      <div class="form-group">
        <label for="user-password">My secret password is...</label>
        <input type="text" name="password" class="form-control" id="user-password" placeholder="password">
      </div>

      <div class='text-right'>
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>

    </form>
  </div>

<div class='in'>
    <form action="/login_go" method="post">
      <legend>You've seen me before.</legend>

      <div class="form-group">
        <label for="user-username">My name is...</label>
        <input type="text" name="username" class="form-control" id="user-username" placeholder="Bob Smith">
      </div>

      <div class="form-group">
        <label for="user-password">My secret password is...</label>
        <input type="text" name="password" class="form-control" id="user-password" placeholder="password">
      </div>

      <div class='text-right'>
        <button type="submit" class="btn btn-primary">Login</button>
      </div>

    </form>
  </div>
</div>
